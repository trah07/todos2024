<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <style>
    .priority {
      color: grey;
      font-size: 80%;
    }
    
    .remove-link {
      color: red;
    }
    
    .done {
      color: green;
    }
    
    .not-done {
      color: red;
    }
  </style>
</head>
<body>

<h1><%= title %></h1>

<ul>
<% for (const todo of todos) { %>
  <li>
    <a href="/todo/<%= todo.id %>"><%= todo.title %></a>
    <% if (todo.priority) { %>
      <span class="priority">(<%= todo.priority %>)</span>
    <% } %>
    <a href="/remove-todo/<%= todo.id %>">
      ODEBRAT
    </a>
    <a href="/toggle-todo/<%= todo.id %>" class="<%= todo.done ? 'done' : 'not-done' %>">
      <%= todo.done ? 'HOTOVO' : 'NEHOTOVO' %>
    </a>
  </li>
<% } %>
</ul>

<form method="post" action="/add-todo">
  <input
    placeholder="Zadej název todo"
    name="title">
  <button type="submit">Přidat</button>
</form>

</body>
</html>